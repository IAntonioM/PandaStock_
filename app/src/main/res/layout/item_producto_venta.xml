<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_gravity="center"
    android:background="@drawable/card_background">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginBottom="8dp">

        <!-- Primera columna -->
        <TextView
            android:id="@+id/tvNombreProducto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:fontFamily="@font/montserratregular"
            android:text="Nombre del Producto"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMarca"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:fontFamily="@font/montserratregular"
            android:text="Marca"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tvModelo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:fontFamily="@font/montserratregular"
            android:text="Modelo"
            android:textColor="#000" />

        <!-- Segunda columna -->
        <TextView
            android:id="@+id/tvPU"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:fontFamily="@font/montserratregular"
            android:text="Precio Unitario:"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tvPrecioUnitario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:fontFamily="@font/montserratregular"
            android:text="S/. 2000000"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tvSubtotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:fontFamily="@font/montserratregular"
            android:text="Subtotal: S/. 2000000"
            android:textColor="#000" />
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <TextView
            android:id="@+id/tvCantidadLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratregular"
            android:text="Cantidad:"
            android:textColor="#000"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerCantidad"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/btnQuitarProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:backgroundTint="#1BB273"
            android:fontFamily="@font/montserratregular"
            android:text="Quitar"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvIdProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="gone" />
</LinearLayout>



